(* In a computational problem anything above the challenge level is useless.
   Therefore, we shift the k in all exponents up by 1 *)
setting symmetric.
problem_type computational.

input
  [ 1
  , Z
  , forall a in [1,l]: X^a*Y ] @ 1.

input
  [ forall b in [1,l-1]: X^b*Y^k
  , forall c in [1,l]: X^(c+l)*Y^k ] @ k-1.

challenge X^l*Y^k*Z @ k.
